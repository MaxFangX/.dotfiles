{
    "title": "Left control + yuio as arrow keys v2. Compatible with critical emacs shortcuts and works with shift/option/command.",
    "rules": [
        {
            "description": "Left control + yuio as arrow keys",
            "manipulators": [
                {
                    "from": {
                        "key_code": "y",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "command",
                                "option",
                                "shift",
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "u",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "command",
                                "option",
                                "shift",
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "i",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "command",
                                "option",
                                "shift",
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "o",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock",
                                "command",
                                "option",
                                "shift",
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
