{
    "title": "Left hand enter and delete",
    "rules": [
        {
            "description": "Backspace with ctrl i",
            "manipulators": [
                {
                    "from": {
                        "key_code": "g",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Enter with ctrl k",
            "manipulators": [
                {
                    "from": {
                        "key_code": "v",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
